@page "/articles"
@using Microsoft.EntityFrameworkCore
@using BloggerBlazorServer.Data
@using BloggerBlazorServer.Models
@inject BloggerBlazorServer.Data.ApplicationDbContext DbContext

<h3>Articles</h3>

@if (articles == null)
{
    <p>Loading...</p>
}
else if (!articles.Any())
{
    <p>No articles found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author (AuthorId)</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in articles)
            {
                <tr>
                    <td>@a.Title</td>
                    <!-- 모델 속성이 AuthorId라면, 여기서 표시 -->
                    <td>@a.AuthorId</td>
                    <!-- 모델 속성이 CreatedAt이라면, 여기서 표시 -->
                    <td>@a.CreatedAt.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    // 충돌을 확실히 방지하기 위해 풀네임 작성:
    private List<BloggerBlazorServer.Models.Article>? articles;

    protected override async Task OnInitializedAsync()
    {
        articles = await DbContext.Set<BloggerBlazorServer.Models.Article>().ToListAsync();
    }
}
